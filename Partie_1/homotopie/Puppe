ie$$I^f = \{ (x,\omega) \in X \times Y^I \,|\, \text{$\omega(1)=f(x)$ pour tout$x \in X$} \}.$$La {\em fibre homotopique} $T^f$ de $f$ est le pullback dans $\cT_*$ de $f$ et$q:(Y,y_0)^{(I,0)} \to (Y,y_0)$, $\omega \mapsto \omega(1)$, \ie$$T^f = \{ (x,\omega) \in I^f \,|\, \omega(0)=b_0 \},$$ pointé en $(x_0,\omega_0)$ avec $\omega_0 \equiv y_0$, le chemin constant en$y_0$.\end{definition}\begin{remark}Cette définition découle d'un exercice dans \cite[Exercice 11.41,p.359]{Rotman}.\end{remark}\begin{lemma}Soit $f:(X,x_0) \to (Y,y_0)$ une application. La suite$$\xymatrix{	(T^f,(x_0,\omega_0)) \ar@{->>}[r]^{f'} &(X,x_0) \ar[r]^f &(Y,y_0),}$$ où $\omega_0 \equiv y_0$ et $f':(x,\omega) \mapsto x$, est exacte.\end{lemma}\begin{proof}\cf \cite[Lemma 11.35, p.348]{Rotman}\end{proof}\begin{corollary}Soit $f:(X,x_0) \to (Y,y_0)$ une application. La suite$$\xymatrix{	\dots \ar[r]^-{f^4}	&(T^{f^2},*) \ar[r]^-{f^3}	&(T^{f^1},*) \ar[r]^-{f^2}	&(T^f,(x_0,\omega_0)) \ar[r]^-{f^1} &(X,x_0) \ar[r]^-f &(Y,y_0),}$$ où $\omega^i_0 \equiv y_0$ et$f^{(i)}:(x,\omega)\mapsto x$, $i \geq 1$ un entier, est exacte.\qed\end{corollary}% %\begin{lemma}% %Soit $f:(X,x_0) \to (Y,y_0)$ une application. Il y a un diagramme qui commute% %dans $\chT_*$ avec la ligne du bas est exacte et les applications verticales des% %équivalences dans $\chT_*$,% %$$% %\xymatrix{% %	\l(X,x_0) \ar[r]^{\l f} \ar[d]% % &\l(Y,y_0) \ar[r] \ar[d]% % &(T^f,\omega_0) \ar[r]^{f^1} \ar[d]_{\id}% % &(X,x_0) \ar[r]^f \ar[d]_{\id}% % &(Y,y_0) \ar[d]_{\id} \\% % (T^{f^2},\omega^3_0) \ar[r]_{f^3}% % &(T^{f^1},\omega^2_0) \ar[r]_{f^2}% % &(T^f,\omega^1_0) \ar[r]_{f^1}% % &(X,x_0) \ar[r]^f% % &(Y,y_0),}% %$$ où $\dots$.% %\end{lemma}% %% %\begin{proof}% %\todo, \cf \cite[Lemma 11.32, p.346; Lemma 11.33, p.347]{Rotman}.% %\end{proof}\begin{corollary}\label{c:homotopie_Puppe_C1}Soit $f:(X,x_0) \to (Y,y_0)$ une application. La suite$$\xymatrix{	\l(X,x_0) \ar[r]^{\l f} &\l(Y,y_0) \ar[r]^k &(T^f,(x_0,\omega_0)) \ar[r]^{f'} &(X,x_0) \ar[r]^f &(Y,y_0),}$$ où $\omega_0 \equiv y_0$, $f':(x,\omega) \mapsto x$ et $k:\omega \mapsto(x_0,\omega)$, est exacte.\end{corollary}\begin{proof}\cf \cite[Corollary 11.37, p.349]{Rotman}\end{proof}\begin{lemma} \label{l:homotopie_Puppe_L1}Soit $\xymatrix{(X',*) \ar[r] &(X,*) \ar[r] &(X'',*)}$ une suite exacte, elleinduit une suite exacte via $\l(-)$.\end{lemma}\begin{proof}Soit $(Z,*)$ un espace pointé. Considérons le diagramme commutatif dont lesapplications verticales sont des bijections pointées ($\l$et $\Sigma$ sont adjoints),$$\xymatrix{	[\Sigma(Z,*),(X',*)] \ar[r] \ar[d] &[\Sigma(Z,*),(X,*)] \ar[r] \ar[d] &[\Sigma(Z,*),(X'',*)] \ar[d] \\ [(Z,*),\l(X',*)] \ar[r] &[(Z,*),\l(X,*)] \ar[r] &[(Z,*),\l(X'',*)].}$$ La ligne du haut est exacte par hypothèse, de sorte que celle du bas aussi.\end{proof}\begin{theorem}[Suite exacte de Puppe] \label{t:homotopie_Puppe_T1}\index{suite exacte!de Puppe}\index{Puppe!suite exacte de --}Soit $f:(X,x_0) \to (Y,y_0)$ une application. La suite$$\xymatrix@R=0.3cm{ \dots \ar[r] &\l^2(T^f,(x_0,\omega_0)) \ar[r]^-{\l^2 f'} &\l^2(X,x_0) \ar[r]^-{\l^2 f} &\l^2(Y,y_0) \ar[r]^-{\l k} & \\ &\l(T^f,(x_0,\omega_0)) \ar[r]^-{\l f'} &\l(X,x_0) \ar[r]^-{\l f} &\l(Y,y_0) \ar[r]^-k & \\ &(T^f,(x_0,\omega_0)) \ar[r]^-{f'} &(X,x_0) \ar[r]^-f &(Y,y_0),}$$où $\omega_0 \equiv y_0$, $f':(x,\omega) \mapsto x$ et $k:\omega \mapsto(x_0,\omega)$, est exacte.\end{theorem}\begin{proof}D'après le Corollaire \ref{c:homotopie_Puppe_C1}, la suite$$\xymatrix{	\l(X,x_0) \ar[r] &\l(Y,y_0) \ar[r] &(T^f,(x_0,\omega_0)) \ar[r] &(X,x_0) \ar[r] &(Y,y_0)}$$ est exacte et d'après le Lemme \ref{l:homotopie_Puppe_L1}, lasuite$$\xymatrix{	\l^2(X,x_0) \ar[r] &\l^2(Y,y_0) \ar[r] &\l(T^f,(x_0,\omega_0)) \ar[r]	&\l(X,x_0) \ar[r] &\l(Y,y_0)}$$est exacte. On conclut en remarquant que ces deux suites serecouvrent et par itération.\end{proof}\begin{definition}\label{d:cone}Soit $f:(X,x_0) \to (Y,y_0)$ une application. Le {\em cylindre} $I_f$ de $f$est le pushout dans $\cT$ de $f$ et $j:X \to I \times X$, $x \mapsto (1,x)$, \ie$$I_f = (I \times X) \cup_{f'} Y,$$ où $f':I \times X \to Y$, $(1,x) \mapsto f(x)$. \\Le {\em cône} $T_f$ de $f$ est le pushout dans $\cT_*$ de $f$ et $j:(X,x_0)\to (I,0) \times (X,x_0)$, $x \mapsto (1,x)$, \ie$$T_f = I_f / (\{0\} \times X),$$ pointé en $\{0\} \times X$.\end{definition}\begin{lemma}Soit $f:(X,x_0) \to (Y,y_0)$ une application. La suite$$\xymatrix{	(X,x_0) \ar[r]^-f &(Y,y_0) \ar@{^{(}->}[r] &(T_f,*)}$$ est coexacte.\end{lemma}\begin{proof}\cf \cite[(6.4), p.128]{Whitehead}.\end{proof}\begin{proposition}\label{t:Puppe_t1}Soit $f:(X,x_0) \to (Y,y_0)$ une application. La suite$$\xymatrix{	(X,x_0) \ar[r]^-f &(Y,y_0) \ar[r]^-{f^1} &(T_f,*) \ar[r]^-{f^2} &(T_{f^1},*) \ar[r]^-{f^3} &(T_{f^2},*) \ar[r]^-{f^4} &\dots,}$$ où $f^i$, $i \geq 1$ un entier, est l'inclusion, est coexacte.\qed\end{proposition}\begin{corollary}Soit $f:(X,x_0) \to (Y,y_0)$ une application. La suite$$\xymatrix{	(X,x_0) \ar[r]^-f &(Y,y_0) \ar[r]^-{f^1}	&(T_f,*) \ar[r]^-q	&\Sigma(X,x_0) \ar[r]^-{\Sigma f} &\Sigma(Y,y_0),}$$ où $f^1$ est l'inclusion et $q$ l'application quotient $\xymatrix{(T_f,*)\ar@{->>}[r] &\Sigma(X,x_0)} \simeq (T_f,*)/(Y,y_0)$, est coexacte.\end{corollary}\begin{proof}\cf \cite[(6.10), p.130]{Whitehead}\end{proof}\begin{lemma}\label{l:Puppe_LSigma}Soit $f:(X,x_0) \to (Y,y_0)$ une application. Le diagramme suivant commute àhomotopie près,$$\xymatrix{	(T_{f^1},*) \ar[r]^{f^3} \ar[d]_{q_1}^\simeq &(T_{f^2},*) \ar[d]^{q_2}_\simeq \\ \Sigma(X,x_0) \ar[r]_{-\Sigma f} &\Sigma(Y,y_0),}$$ où $f^1$, $f^2$, $f^3$ sont les applications de la Proposition\ref{t:Puppe_t1} et$q_1$, $q_2$ sont des équivalences d'homotopie.\end{lemma}\begin{proof}\cf \cite[Lemma 6.15, pp.132-133]{Whitehead}.\end{proof}\begin{corollary}Soit $f:(X,x_0) \to (Y,y_0)$ une application. La suite$$\xymatrix{	(X,x_0) \ar[r]^-f &(Y,y_0) \ar[r]^-{f^1}	&(T_f,*) \ar[r]^-q	&\Sigma(X,x_0) \ar[r]^-{-\Sigma f} &\Sigma(Y,y_0),}$$ où $f^1$ est l'inclusion et $q$ l'application quotient $\xymatrix{(T_f,*)\ar@{->>}[r] &\Sigma(X,x_0)} \simeq (T_f,*)/(Y,y_0)$, est coexacte.\qed\end{corollary}\begin{lemma} \label{l:homotopie_Puppe_L2}Soit $\xymatrix{(X',*) \ar[r] &(X,*) \ar[r] &(X'',*)}$ une suite coexacte, elleinduit une suite coexacte via $\Sigma(-)$ ou $-\Sigma(-)$.\end{lemma}\begin{proof}\cf preuve du Lemme \ref{l:homotopie_Puppe_L1}.\end{proof}\begin{theorem}[Suite coexacte de Puppe] \label{t:homotopie_Puppe_T2}\index{suite coexacte!de Puppe}\index{Puppe!suite coexacte de --}Soit $f:(X,x_0) \to (Y,y_0)$ une application. La suite$$\xymatrix@R=0.3cm{	(X,x_0) \ar[r]^-f &(Y,y_0) \ar[r]^-{f^1} &(T_f,*) \ar[r]^-q & \\ \Sigma(X,x_0) \ar[r]^{\Sigma f} &\Sigma(Y,y_0) \ar[r]^-{\Sigma f^1} &\Sigma(T_f,*) \ar[r]^-{\Sigma q} & \\ \Sigma^2(X,x_0) \ar[r]^{\Sigma^2 f} &\Sigma^2(Y,y_0) \ar[r]^-{\Sigma^2 f^1} &\Sigma^2(T_f,*) \ar[r]^-{\Sigma^2 q} \ar[r] &\dots,}$$où $f^1$ est l'inclusion et $q$ l'application quotient $\xymatrix{(T_f,*)\ar@{->>}[r] &\Sigma(X,x_0)} \simeq (T_f,*)/(Y,y_0)$, est coexacte.\end{theorem}\begin{proof}\cf preuve du Théorème \ref{t:homotopie_Puppe_T1}.\end{proof}\begin{theorem}[Suite anticoexacte de Puppe] \label{t:homotopie_Puppe_T2}\index{suite anticoexacte!de Puppe}\index{Puppe!suite anticoexacte de --}Soit $f:(X,x_0) \to (Y,y_0)$ une application. La suite$$\xymatrix@R=0.3cm{	(X,x_0) \ar[r]^-f &(Y,y_0) \ar[r]^-{f^1} &(T_f,*) \ar[r]^-q & \\ \Sigma(X,x_0) \ar[r]^{-\Sigma f} &\Sigma(Y,y_0) \ar[r]^-{-\Sigma f^1} &\Sigma(T_f,*) \ar[r]^-{-\Sigma q} & \\ \Sigma^2(X,x_0) \ar[r]^{\Sigma^2 f} &\Sigma^2(Y,y_0) \ar[r]^-{\Sigma^2 f^1} &\Sigma^2(T_f,*) \ar[r]^-{\Sigma^2 q} \ar[r] &\dots,}$$où $f^1$ est l'inclusion et $q$ l'application quotient $\xymatrix{(T_f,*)\ar@{->>}[r] &\Sigma(X,x_0)} \simeq (T_f,*)/(Y,y_0)$, est coexacte.\end{theorem}\begin{proof}\cf preuve du Théorème \ref{t:homotopie_Puppe_T1}.\end{proof}%*******************************************************************************\ifx\indiplome\undefined	\end{document}\fi\endinput