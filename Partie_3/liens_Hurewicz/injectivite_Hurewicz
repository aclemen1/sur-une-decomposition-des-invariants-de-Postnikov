\ifx\indiplome\undefined	\message{Local mode compiling…}	\documentclass[titlepage,10pt,a4paper]{article}	\input :::Arsenal:Arsenal	\begin{document}\fi%*******************************************************************************%===============================================================================\bigskip\subsection{L'injectivité de l'homomorphisme d'Hurewicz}\bigskip%===============================================================================\begin{lemma} \label{l:cas_k_ext_L1}Soient $X$ un CW-complexe connexe simple et $n \geq 2$ un entier. Lesassertions suivantes sont équivalentes,\begin{itemize}\item[(i)]{l'homomorphisme d'Hurewicz $h_n:\pi_n(X) \to \H_n(X)$ est injectif,}%\item[(ii)]{l'induite en homologie d'un $(n+1)$-ième invariant homotopique de $X$,%$\H_{n+1}(l^{n+1}(X))$, est triviale.}\item[(ii)]{l'homomorphisme $(l^{n+1}(X))_*:\H_{n+1}(X[n-1]) \to\H_{n+1}(\K(\pi_n(X),n+1))$ induit par un $(n+1)$-ième invariant homotopique de$X$, $l^{n+1}(X)$, est trivial.}\end{itemize}\end{lemma}%ok\begin{proof}Considérons le diagramme de Postnikov,$$\xymatrix{	\K(\pi_n(X),n) \ar[r]^-\simeq \ar[d]_{i_n} &\K(\pi_n(X),n) \ar[d] \\	X[n] \ar[d]_{\gamma_{n-1}} \ar[r] &{*} \ar[d]^q \\ X[n-1] \ar[r]_-{l^{n+1}(X)} &\K(\pi_n(X),n+1).}$$Les fibres $\K(\pi_n(X),n)$ étant $(n-1)$-connexes, la suite spectrale de Serre(\cf Annexes) donne le diagramme commutatif formé de lignes exactes suivant,$$\xymatrix{	\H_{n+1}(X[n]) \ar[r]^-{(\gamma_{n-1})_*} \ar[d]	&\H_{n+1}(X[n-1]) \ar[r]^\partial \ar[d]^{{l^{n+1}(X)}_*}	&\H_n(\K(\pi_n(X),n)) \ar[r]^-{(i_n)_*} \ar[d]^\cong	&\H_n(X[n]) \ar[d] \\	0 \ar[r]	&\H_{n+1}(\K(\pi_n(X),n+1)) \ar[r]^-{\cong}	&\H_n(\K(\pi_n(X),n)) \ar[r]	&0.}$$Ainsi ${l^{n+1}(X)}_* = 0$ \ssi $\partial = 0$ \ie $\ker (i_n)_* = 0$ \ie $(i_n)_*$ est injectif.Par naturalité de l'homomorphisme d'Hurewicz, on a le diagramme commutatif suivant,$$\xymatrix{	\pi_n(\K(\pi_n(X),n)) \ar[r]^-{(i_n)_\#}_-{\cong} \ar[d]^{h_n}_\cong	&\pi_n(X[n]) \ar[d]^{h_n}	&\pi_n(X) \ar[l]_-{(\alpha_n)_\#}^-{\cong} \ar[d]^{h_n} \\	\H_n(\K(\pi_n(X),n)) \ar[r]^-{(i_n)_*}	&\H_n(X[n])	&\H_n(X) \ar[l]_-{(\alpha_n)_*}^-{\cong} \\}$$de sorte que $(i_n)_*$ est injectif \ssi $h_n:\pi_n(X[n]) \to \H_n(X[n])$ estinjectif \ie $h_n:\pi_n(X) \to \H_n(X)$ est injectif.\end{proof}%ok\begin{proof}[Démonstration 2 (\Arl)]%Considérons une équivalence d'homotopie $l:(X[n-1],X[n]) \to \K(\pi_n(X),n+1)$%et les suites exactes longues des paires $(X[n-1],X[n])$ et%$(\K(\pi_n(X),n+1),*)$ en homologie, cela induit le diagramme commutatif%suivant (\cf Définition \ref{d:Postnikov_D2}),%$$%\xymatrix{%	\H_{n+1}(X[n]) \ar[r]% &\H_{n+1}(X[n-1]) \ar[r]^-{j_*} \ar[d]_{l^{n+1}(X)_*}% &\H_{n+1}(X[n-1],X[n]) \ar[r]^-\partial \ar[dl]_{l_*}^\cong% &\H_n(X[n]) \\% 0 \ar[r]% &\H_{n+1}(\K(\pi_n(X),n+1)) \ar[r]_-\cong% &\H_{n+1}(\K(\pi_n(X),n+1),*) \ar[r]% &0.}%$$Considérons le diagramme de Postnikov suivant,$$\xymatrix{	X[n] \ar[r] \ar[d]_{\gamma_{n-1}} &{*} \ar[d] \\ X[n-1] \ar[r]_-{l^{n+1}(X)} &\K(\pi_n(X),n+1),}$$ avec $l^{n+1}(X)$ un $(n+1)$-invariant homotopique de $X$. On a donc (dans$\chT^2$) une application de paires $l:(X[n-1],X[n]) \to(\K(\pi_n(X),n+1),*)$ qui fait commuter le diagramme suivant,$$\xymatrix{	X[n-1] \ar[r]^-j \ar[d]_{l^{n+1}(X)} &(X[n-1],X[n]) \ar[d]^l \\ \K(\pi_n(X),n+1) \ar[r] &(\K(\pi_n(X),n+1),*),}$$ avec les applications horizontales les inclusions dans les paires. LeThéorème d'Hurewicz relatif implique que $l_*:\H_{n+1}(X[n-1],X[n]) \to\H_{n+1}(\K(\pi_n(X),n+1),*)$ est un isomorphisme. On a donc le diagrammecommutatif suivant,$$\xymatrix{	\H_{n+1}(X[n]) \ar[r] &\H_{n+1}(X[n-1]) \ar[r]^-{j_*} \ar[d]_{l^{n+1}(X)_*} &\H_{n+1}(X[n-1],X[n]) \ar[r]^-\partial \ar[d]^{l_*}_\cong &\H_n(X[n]) \\ 0 \ar[r] &\H_{n+1}(\K(\pi_n(X),n+1)) \ar[r]_-\cong &\H_{n+1}(\K(\pi_n(X),n+1),*) \ar[r] &0.}$$Ainsi $\partial$est injectif\ssi$j_*$ est trivial\ie$l^{n+1}(X)_*$ est trivial. On conclut en remarquant que le diagramme suivantcommute par définition de l'homomorphisme d'Hurewicz,$$\xymatrix{	\pi_{n+1}(X[n-1],X[n]) \ar[r]^-\partial_-\cong \ar[d]_{h_n}^\cong &\pi_n(X[n]) \ar[d]^{h_n} \\ \H_{n+1}(X[n-1],X[n]) \ar[r]_-\partial &\H_{n+1}(X[n]).}$$\end{proof}%ok\bigskipCe Théorème est le résultat principal, la réponse au problème posé. On a unecaractérisation de l'injectivité de l'homomorphisme d'Hurewicz en termesd'invariant de Postnikov.\begin{theorem} \label{t:cas_k_ext_T}Soient $X$ un CW-complexe connexe simple et $n \geq 2$ un entier. Lesassertions suivantes sont équivalentes,\begin{itemize}\item[(i)]{l'homomorphisme d'Hurewicz $h_n:\pi_n(X) \to \H_n(X)$ est injectif,}\item[(ii)]{la partie $\Hom$ du $(n+1)$-ième invariant de Postnikov,$\ph{k^{n+1}(X)}$, est triviale, \ie $\ph{k^{n+1}(X)} = 0$.}\end{itemize}\end{theorem}\begin{proof}Par naturalité du Théorème des coefficients universels, on a le diagrammecommutatif suivant,$$\xymatrix{	%0 \ar[r] \ar[d]	&\H^{n+1}(\K(\pi_n(X), n+1);\pi_n(X)) \ar[r]^-{\rho}_-{\cong} 		\ar[d]_{{l^{n+1}(X)}^*}	&\Hom(\H_{n+1}(\K(\pi_n X,n+1)),\pi_n(X)) 		\ar[d]^{\Hom({l^{n+1}(X)}_*,\id)} \\	\Ext(\H_n(X[n-1]), \pi_n(X)) \ar[r]	&\H^{n+1}(X[n-1];\pi_n(X)) \ar[r]^-{\rho}	&\Hom(\H_{n+1}(X[n-1]),\pi_n(X)).}$$On a $\ph{k^{n+1}(X)} = \rho(k^{n+1}(X)) = \rho \circ l^{n+1}(X)^*\,(\iota^{n+1})$ par la Proposition \ref{p:pseudodef_k}, avec $\iota^{n+1}$ laclasse caractéristique de l'espace d'Eilenberg-MacLane $\K(\pi_n(X),n+1)$.Ainsi, par commutativité, on a $\ph{k^{n+1}(X)} = 0$ \ssi$\Hom(l^{n+1}(X)_*,\id) \circ \rho\,(\iota^{n+1}) = 0$ \ie \ssi$\Hom(l^{n+1}(X)_*,\id)\,(h_{n+1}^{-1}) = 0$ avec $h_{n+1}^{-1}$l'inverse de l'isomorphisme d'Hurewicz $h_{n+1}:\pi_{n+1}(\K(\pi_n(X),n+1)) \to\H_{n+1}(\K(\pi_n(X),n+1)) \cong \pi_n(X)$ \ie \ssi $l^{n+1}(X)_*=0$. Onconclut à l'aide du Lemme.\end{proof}%ok%*************************************************************